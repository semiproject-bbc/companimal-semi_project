    <!-- 종료된 프로젝트 가져오는 쿼리 -->
    <select id="selectEndProjectList" parameterType="String" resultMap="projectResultMap">
        SELECT pro_code
        ,pro_name
        ,pro_intro
        ,goal_amount
        ,start_date
        ,end_date
        ,pro_story
        ,pol_no_refund
        ,pol_as
        ,mem_id
        ,est_date
        ,ach_rate
        ,del_status
        ,cate_main
        ,cate_sub
        FROM project
        WHERE del_status = 'N' and replace(end_date,'-','') <![CDATA[ < ]]>  replace(CURRENT_DATE(), '-', '') and mem_id = #{id}
        ORDER BY end_date
    </select>

    <!-- 배송 예정일 업데이트 쿼리 -->
    <update id="updateShipment" parameterType="com.companimal.semiProject.project.model.dto.ProjectDTO">
        UPDATE project
            SET est_date=#{estDate}
            WHERE pro_code=#{proCode}
    </update>

    <!-- 서포터 후원 리스트 가져오는 쿼리 -->
    <select id="selectSupportList" parameterType="int" resultMap="selectSupportListResultMap">
        SELECT
            o.mem_id,
            o.order_date,
            o.final_pay,
            t.order_amount,
            w.rew_amount
            FROM order_payment o
            JOIN order_opt t ON (o.order_code = t.order_no)
            JOIN reward_opt w ON (t.rew_opt_code = w.rew_opt_code)
            WHERE o.pro_code = #{proCode}
            ORDER BY o.order_date desc
    </select>

    <!-- 후원 정산 내역 -->
    <select id="selectCalculationList" parameterType="String" resultMap="selectCalculationResultMap">
        SELECT
            p.pro_code,
            o.pro_code,
            p.pro_name,
            p.est_date,
            p.ach_rate,
            c.cal_req_datetime,
            c.cal_app_datetime
            FROM project p
            LEFT JOIN (SELECT DISTINCT
                pro_code,
                purchase_status
                FROM order_payment
                WHERE pro_code in (SELECT
                    pro_code
                    FROM project
                    WHERE mem_id = #{id}
                        AND DATEDIFF(end_date, now()) <![CDATA[ <= ]]> 0)
                        AND purchase_status IS NULL) o ON (p.pro_code = o.pro_code)
            LEFT JOIN calculation_list c ON (p.pro_code = c.pro_code)
            WHERE mem_id = #{id} AND DATEDIFF(end_date, now()) <![CDATA[ <= ]]> 0 AND ach_rate >= 100;
    </select>

    <insert id="insertCalculationList" parameterType="String">
        INSERT INTO calculation_list
            (
                pro_code
                , cal_req_datetime
                , cal_app_datetime
                , cal_status
            )
            VALUES
            (
                #{proCode}
                , now()
                , NULL
                , 'N'
            )
    </insert>
