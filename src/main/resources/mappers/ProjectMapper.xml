    <!-- 프로젝트 상세페이지 조회에서 하드코딩으로 등록한 정보 가져오는 쿼리 -->
    <select id="selectProject" resultMap="projectResultMap">
        SELECT pro_code
                ,pro_name
                ,pro_intro
                ,goal_amount
                ,start_date
                ,end_date
                ,pro_story
                ,pol_no_refund
                ,pol_as
                ,mem_id
                ,est_date
                ,ach_rate
                ,del_status
                ,cate_main
                ,cate_sub
          FROM project
         WHERE del_status = 'N'
<!--           AND TO_DAYS(now())-TO_DAYS('end_date');-->
    </select>

    <!-- 프로젝트 상세페이지 조회에서 DB에 저장한 정보 가져오는 쿼리 -->
    <select id="selectProjectDetail" resultMap="projectDetailResultMap">
        SELECT p.pro_code
                ,p.pro_name
                ,p.pro_intro
                ,p.goal_amount
                ,p.start_date
                ,p.end_date
                ,p.pro_story
                ,p.pol_no_refund
                ,p.pol_as
                ,p.mem_id
                ,p.est_date
                ,p.ach_rate
                ,p.del_status
                ,p.cate_main
                ,p.cate_sub
                ,r.rew_name
                ,r.rew_explain
                ,r.rew_sf
                ,o.rew_opt_name
                ,o.rew_opt_val
                ,o.rew_opt_limit
                ,o.rew_amount
                ,i.pro_img_name
                ,f.pro_file_name
                ,c1.pro_cate_name
                ,c2.pro_cate_name
          FROM project p
          JOIN reward r ON (p.pro_code = r.pro_code)
          JOIN reward_opt o ON (r.rew_code = o.rew_code)
          JOIN project_image i ON (p.pro_code = i.pro_code)
          JOIN project_file f ON (p.pro_code = f.pro_code)
          JOIN project_cate c1 ON (p.cate_main = c1.pro_cate_code)
          JOIN project_cate c2 ON (p.cate_sub = c2.pro_cate_code)
         WHERE del_status = 'N'
    </select>

    <!-- 프로젝트 등록 시 db에 저장할 쿼리 -->
    <insert id="insertProject" parameterType="com.companimal.semiProject.project.model.dto.ProjectDTO">
        INSERT INTO project (
                                pro_name
                                ,pro_intro
                                ,goal_amount
                                ,start_date
                                ,end_date
                                ,pro_story
                                ,pol_no_refund
                                ,pol_as
                                ,mem_id
                                ,est_date
                                ,ach_rate
                                ,del_status
                                ,cate_main
                                ,cate_sub
                                )
          VALUES (
                    #{ proName }
                    ,#{ proIntro }
                    ,#{ goalAmount }
                    ,#{ startDate }
                    ,#{ endDate }
                    ,#{ proStory }
                    ,#{ polNoRefund }
                    ,#{ polAs }
                    ,#{ memId }
                    ,#{ estDate }
                    ,#{ achRate }
                    ,#{ delStatus }
                    ,#{ cateMain }
                    ,#{ cateSub }
                    )
    </insert>

    <insert id="insertProjectReward" parameterType="com.companimal.semiProject.project.model.dto.ProjectRewardDTO">
