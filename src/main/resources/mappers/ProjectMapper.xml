    <select id="selectEndProjectList" resultMap="projectResultMap">
        SELECT pro_code
        ,pro_name
        ,pro_intro
        ,goal_amount
        ,start_date
        ,end_date
        ,pro_story
        ,pol_no_refund
        ,pol_as
        ,mem_id
        ,est_date
        ,ach_rate
        ,del_status
        ,cate_main
        ,cate_sub
        FROM project
        WHERE del_status = 'N' and replace(end_date,'-','') <![CDATA[ < ]]>  replace(CURRENT_DATE(), '-', '')
    </select>

    <!-- 배송 예정일 업데이트 쿼리 -->
    <update id="updateShipment" parameterType="com.companimal.semiProject.project.model.dto.ProjectDTO">
        UPDATE project
            SET est_date=#{estDate}
            WHERE pro_code=#{proCode}
    </update>







    <!-- 서포터 후원 리스트 가져오는 쿼리 -->
    <select id="selectSupportList" parameterType="_int" resultMap="selectSupportListResultMap">
        SELECT
            p.pro_code,
            p.est_date,
            o.order_date,
            o.mem_id,
            o.final_pay,
            t1.rew_amount,
            d.order_amount
            FROM project p
            JOIN order_payment o ON (p.pro_code = o.pro_code)
            JOIN order_opt d ON (o.order_code = d.order_no)
            JOIN reward r ON (p.pro_code = r.pro_code)
            JOIN reward_opt t1 ON (r.rew_code = t1.rew_code)
            JOIN reward_opt t2 ON (t2.rew_opt_code = d.rew_opt_code)
            WHERE p.pro_code = #{id}
            ORDER BY o.purchase_status
    </select>










